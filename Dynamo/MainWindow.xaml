<Window x:Class="Dynamo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dynamo"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1200">

    <Window.Resources>
        <local:FormatConverter x:Key="FormatConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl Height="884" VerticalAlignment="Top">
            <TabItem Header="Format Converter">
                <Canvas>
                    <Grid Height="838" Width="1200" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="37*"/>
                            <RowDefinition Height="380*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="56*"/>
                            <ColumnDefinition Width="45*"/>
                            <ColumnDefinition Width="498*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Content="Insert" Background="#FF44B8C7" Foreground="White" Margin="7,0,25,0" Click="Button_Click" Grid.ColumnSpan="2" Height="28" VerticalAlignment="Center"/>
                        <DataGrid x:Name="dtExcel" d:ItemsSource="{Binding}" Grid.ColumnSpan="3" Margin="7,0,506,0" Grid.Row="1"/>
                    </Grid>
                </Canvas>



            </TabItem>
            <TabItem Header="Query Formater">
                <DockPanel>
                    <Grid Background="#FFE5E5E5" Width="100">

                    </Grid>

                </DockPanel>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
